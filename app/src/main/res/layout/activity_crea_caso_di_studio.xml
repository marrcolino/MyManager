<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreaCasoDiStudio">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-48dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <EditText
                android:id="@+id/editTextNomeCaso"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/edit_text_style2"
                android:ems="10"
                android:hint="Inserisci il nome del caso di studio"
                android:inputType="text"
                android:padding="10dp"
                android:shadowColor="@color/black"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"/>

            <EditText
                android:id="@+id/editTextEsame"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/edit_text_style2"
                android:ems="10"
                android:hint="Inserisci il nome dell'esame"
                android:inputType="text"
                android:padding="10dp"
                android:shadowColor="@color/black"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"/>

            <EditText
                android:id="@+id/editTextDescrizione"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_margin="20dp"
                android:background="@drawable/edit_text_style2"
                android:ems="10"
                android:hint="Inserisci informazioni sul caso di studio"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:padding="10dp"
                android:shadowColor="@color/black"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:scrollbars="vertical"/>

            <Button
                android:id="@+id/buttonCrea"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:backgroundTint="#0094FF"
                android:text="Crea"
                android:textColor="#FFFFFF"
                android:textSize="20dp"/>

        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>